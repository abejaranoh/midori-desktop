{
  "typeAcquisition": {
    "enable": true,
    "include": ["./@types/index.d.ts"]
  },
  "compilerOptions": {
    "target": "es2017",
    "module": "ESNext",
    "moduleDetection": "force",
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,

    "paths": {
      "chrome://browser/content/*": ["./browser/base/content/*"]
    },
    "lib": ["ES2023", "dom"],
    "typeRoots": ["./@types"]
  },
  "exclude": ["node_modules"]

  //"references": [{ "path": "./nora" }]
}
